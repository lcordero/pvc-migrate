apiVersion: v1
kind: Service
metadata:
  labels:
    app: "{{ pod_name }}"
    purpose: rsync
    owner: pvc-migrate
  name: "{{ svc_name }}"
  namespace: "{{ pvc_namespace }}"
spec:
  ports:
  - name: stunnel
    port: {{ stunnel_port | int }}
    protocol: TCP
    targetPort: {{ stunnel_port | int }}
  selector:
    app: "{{ pod_name }}"
    purpose: rsync
    owner: pvc-migrate
  type: ClusterIP
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: "{{ route_name }}"
  namespace: "{{ pvc_namespace }}"
  labels:
    app: "{{ pod_name }}"
    purpose: rsync
    owner: pvc-migrate
spec:
{% if route_host != "" %}
  host: "{{ route_host }}"
{% endif %}
  to:
    kind: Service
    name: "{{ svc_name }}"
  port:
    targetPort: {{ stunnel_port | int }}
  tls:
    termination: passthrough
